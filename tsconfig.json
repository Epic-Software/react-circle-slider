{
	"compilerOptions": {
		"noEmit": true,
		"target": "es5",
		"allowJs": true,
		"baseUrl": "./",
		"strict": false,
		"jsx": "preserve",
		"module": "esnext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "esnext"]
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"]
}
